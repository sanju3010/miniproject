<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orphanages</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Orphanages</h1>
    </header>

    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% orphanages.forEach(orphanage => { %>
                    <tr>
                        <td><%= orphanage.name %></td>
                        <td><%= orphanage.location %></td>
                        <td><%= orphanage.description %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <footer>
        <p>&copy; 2024 Orphanage Management. All rights reserved.</p>
    </footer>
</body>
</html>
