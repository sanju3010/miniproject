<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donations</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>Donations</h1>
    </header>

    <main>
        <table>
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Donor</th>
                    <th>Date</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <% donations.forEach(donation => { %>
                    <tr>
                        <td><%= donation.amount %></td>
                        <td><%= donation.donorName %></td>
                        <td><%= donation.date.toDateString() %></td>
                        <td><%= donation.message %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <footer>
        <p>&copy; 2024 Orphanage Management. All rights reserved.</p>
    </footer>
</body>
</html>