<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Children List - Orphanage Management System</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Children List</h1>
        </header>

        <nav>
            <ul>
                <li><a href="/" class="btn">Home</a></li>
                <li><a href="/children/new" class="btn">Add New Child</a></li>
            </ul>
        </nav>

        <main>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Education Level</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% children.forEach(child => { %>
                        <tr>
                            <td><%= child.name %></td>
                            <td><%= new Date().getFullYear() - child.dateOfBirth.getFullYear() %></td>
                            <td><%= child.gender %></td>
                            <td><%= child.educationLevel %></td>
                            <td>
                                <a href="/children/<%= child._id %>" class="btn">View</a>
                                <a href="/children/<%= child._id %>/edit" class="btn">Edit</a>
                                <form action="/children/<%= child._id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="btn" onclick="return confirm('Are you sure you want to delete this record?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>

        <footer>
            <p>&copy; 2024 Orphanage Management System. All Rights Reserved.</p>
        </footer>
    </div>
</body>
</html>